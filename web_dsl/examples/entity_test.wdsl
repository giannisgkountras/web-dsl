webpage Vroomitor
    author: "Giannis Gkountras"
    version: "1.0"
    description: "A live dashboard"
    navbar: true

    API publisherAPI
        host: "0.0.0.0"
        port: 8321
    end

    Broker<MQTT> HomeBroker
        host: "192.168.1.6"
        port: 1883
    end

    Broker<Redis> LabRedis
        host: "192.168.1.6"
        port: 6379
    end

    Websocket HomeWebsocket
        host: "192.168.1.6"
        port: 8080
    end

    Entity cpuMetrics
        source: HomeBroker
        topic: "cpu"
        attributes:
            - timestamp: int
            - jetson: float
            - rpi: float 
            - laptop: float
    end

    Entity carInformation
        source: HomeBroker
        topic: "carinfo"
        attributes:
            - frame: str
            - speed: float 
            - state: str
    end

    Component title
        type: h1 "Hello World"
    end

    Screen Dashboard
        title: "Dashboard"
        url: "/"

        row
            col 
                row
                    Component JetsonGaugeCPU
                    entity: cpuMetrics
                    type: Gauge
                            value: jetson
                    end
                endrow
                row
                    Component RPIGaugeCPU
                    entity: cpuMetrics
                    type: Gauge
                            value: rpi
                    end
                endrow
            endcol
            Component InfoNotification
                entity: carInformation 
                type: Notification
                        type: info
                        message: state
            end
            col
                Component Camera
                    entity: carInformation
                    type: Image
                        source: frame
                end
            endcol
            col
                Component CPUChart
                    entity: cpuMetrics
                    type: LineChart
                        xLabel: "X Axis Test"
                        yLabel: "Y Axis Test"
                        xValue: timestamp
                        yValues: jetson, rpi
                end
            endcol
        endrow
        row
            col
                Component MyPublisher
                    type: Publish
                        broker: HomeBroker
                end
            endcol
            col
                row
                    use title
                endrow
                row
                    Component cpuAlive
                        entity: cpuMetrics
                        type: Alive
                            timeout: 5000
                    end
                endrow
            endcol
            col
                Component myLiveTable
                    entity: cpuMetrics
                    type: LiveTable
                        columns: jetson, rpi, laptop
                end
            endcol
        endrow
        
    end