webpage Vroomitor
    author: "Giannis Gkountras"
    version: "1.0"
    description: "A live dashboard"
    navbar: true

    API publisherAPI
        host: "0.0.0.0"
        port: 8321
    end

    Broker<MQTT> HomeBroker
        host: "192.168.1.6"
        port: 1883
    end

    Broker<Redis> LabRedis
        host: "192.168.1.6"
        port: 6379
    end

    Websocket HomeWebsocket
        host: "192.168.1.6"
        port: 8080
    end

    Entity cpuMetrics
        source: HomeBroker
        topic: "cpu"
        attributes:
            - timestamp: int
            - jetson: float
            - rpi: float 
            - laptop: float
    end

    Entity carInformation
        source: HomeBroker
        topic: "carinfo"
        attributes:
            - frame: str
            - speed: float 
            - state: str
    end

    Component title
        type: h1 "Hello World"
    end

    Screen Dashboard
        title: "Dashboard"
        url: "/"

        Component JetsonGaugeCPU
            entity: cpuMetrics
            type: Gauge
                    value: jetson
        end


        Component RPIGaugeCPU
            entity: cpuMetrics
            type: Gauge
                    value: rpi
        end

        Component InfoNotification
            entity: cpuMetrics 
            type: Notification
                    type: info
                    message: rpi
        end

        Component Camera
            entity: carInformation
            type: Image
                source: frame
        end

        Component CPUChart
            entity: cpuMetrics
            type: LineChart
                xLabel: "X Axis Test"
                yLabel: "Y Axis Test"
                xValue: timestamp
                yValues: jetson, rpi
        end

        use title
        
    end