webpage Vroomitor
    author: "Giannis Gkountras"
    version: "1.0"
    description: "A live dashboard"
    navbar: true

    Broker<MQTT> HomeBroker
        host: "192.168.1.6"
        port: 1883
    end

    Broker<Redis> LabRedis
        host: "192.168.1.6"
        port: 6379
    end

    Websocket HomeWebsocket
        host: "192.168.1.6"
        port: 8080
    end

    Entity NotificationData
        source: HomeBroker
        attributes:
            - message: str
    end

    Entity AllLogsData
        source: LabRedis
        attributes:
            - speed: float
            - car_running: str
            - current_state: str
    end

    DefineComponent infoNotification as
        LiveComponent
            topic: "notifications/info"
            dataName: "notificationsInfo"
            content: Notification infoNotification type: info
            entity: NotificationData
        end
    end


    Screen Dashboard
        title: "Dashboard"
        url: "/"

        Entity SensorData
            source: HomeBroker
            attributes: 
                - timestamp: str 
                - value: float
        end

        Entity SpeedChartData
            source: HomeBroker
            attributes:
                - timestamp: str
                - speed: float
                - cpu: float
                - gpu: float
        end

        Entity GaugeData
            source: HomeBroker
            attributes:
                - cpu: int
        end

        Entity LiveImageData
            source: HomeBroker
            attributes:
                - frame: str
        end

        Entity JsonViewerData
            source: HomeBroker
            attributes:
                - data: dict
        end

        row
            h1 "Sensor Dashboard"
        endrow
        row
            col
                LiveComponent
                    topic: "sensor/data"
                    dataName: "latestReading"
                    content: p "Latest sensor value"
                    entity: SensorData
                end
            endcol
            col
                LiveComponent
                    topic: "chart/speed"
                    dataName: "speedChart"
                    content: LineChart speedChart
                                xLabel: "Time"
                                yLabel: "Speed"
                    entity: SpeedChartData
                end
            endcol
            col
                LiveComponent
                    topic: "logs/all"
                    dataName: "allLogs"
                    content: Logs allLogs
                    entity: AllLogsData
                end
            endcol
        endrow
        row
            col
                LiveComponent
                    topic: "gauge"
                    dataName: "gaugeValue"
                    content: Gauge cpuGauge
                    entity: GaugeData
                end
            endcol
            col
                LiveComponent
                    topic: "image"
                    dataName: "liveImg"
                    content: 
                        Image liveimg 
                    entity: LiveImageData
                end
            endcol
            col
                LiveComponent
                    topic: "view"
                    dataName: "jsonData"
                    content:
                        JsonViewer dataViewer
                    entity: JsonViewerData
                end
            endcol
        endrow
        useComponent infoNotification
    end